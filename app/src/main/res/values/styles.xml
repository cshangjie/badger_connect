<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="Messaging_menuItemStyle">
        <item name="android:padding">160dp</item>
        <item name="android:textSize">500sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <drawable name="spinner_background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- set background color to white -->
            <corners android:radius="10dp" /> <!-- set corner radius to 10dp -->
        </shape>
    </drawable>

</resources>